<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jitsinfo.andriodversions.MainActivity">

    <TextView
        android:id="@+id/textview_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Android Versions"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageview_logo"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/textview_head"
        android:src="@drawable/androidlogo" />

    <Spinner
        android:id="@+id/versionname"
        style="@style/Base.Widget.AppCompat.Spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageview_logo"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:entries="@array/version_name"
        android:spinnerMode="dialog">

    </Spinner>

    <TextView
        android:id="@+id/textview_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/versionname"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="20dp"
        android:text="Version Number"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/versionnumber"
        style="@style/Base.Widget.AppCompat.Spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_view2"
        android:layout_marginLeft="137dp"
        android:layout_marginTop="20dp">

    </Spinner>


</RelativeLayout>
